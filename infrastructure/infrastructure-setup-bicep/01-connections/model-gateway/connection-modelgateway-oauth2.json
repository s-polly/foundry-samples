  "outputs": {
    "connectionName": {
      "type": "string",
      "value": "[variables('finalConnectionName')]"
    },
    "targetUrl": {
      "type": "string",
      "value": "[parameters('targetUrl')]"
    },
    "metadata": {
      "type": "object",
      "value": "[variables('metadata')]"
    },
